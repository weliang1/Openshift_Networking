apiVersion: v1
kind: Pod
metadata:
  name: egress-router-dns-pod
  labels:
    name: egress-router-dns-pod
  annotations:
    pod.network.openshift.io/assign-macvlan: "true"
spec:
  initContainers:
  - name: egress-router-setup
    image: registry.redhat.io/openshift4/ose-egress-router
    imagePullPolicy:  IfNotPresent
    securityContext:
      privileged: true
    env:
    - name: EGRESS_SOURCE
      value: 10.73.116.68
    - name: EGRESS_GATEWAY
      value: 10.73.117.254
    - name: EGRESS_DESTINATION 
      value:  172.217.7.142
    - name: EGRESS_ROUTER_MODE
      value: init
  containers:
  - name: egress-router-dns-proxy
    image: registry.redhat.io/openshift4/ose-pod
    imagePullPolicy:  IfNotPresent
    securityContext:
      privileged: true
    
